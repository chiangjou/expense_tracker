<body>
  <header>
    {{!-- navigation --}}
    <nav class="navbar navbar-dark justify-content-between" style="padding: 8px 16px; background-color: #3B3C40">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <i class="fa-solid fa-piggy-bank"></i>
          {{#if isAuthenticated}}{{ user.name }}的{{/if}}家庭記帳本
        </a>
        {{#if isAuthenticated}}
        <a href="/users/logout" class="btn btn-outline-light">登出</a>
